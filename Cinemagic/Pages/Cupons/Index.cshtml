@page
@model Cinemagic.Pages.Coupons.IndexModel
@inject IHttpContextAccessor HttpContextAccessor


@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


@{
    ViewData["Title"] = "Coupons";

    var userType = HttpContextAccessor.HttpContext.Session.GetString("UserType");
    var isAdmin = userType == "Admin";
}

<h1>Available Coupons</h1>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Expiry Date</th>
            @if (isAdmin)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var coupon in Model.Coupons)
        {
            <tr>
                <td>@coupon.Code</td>
                <td>@coupon.Description</td>
                <td>@coupon.ExpiryDate.ToString("yyyy-MM-dd")</td>
                @if (isAdmin)
                {
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-code="@coupon.Code" onsubmit="return confirm('Are you sure you want to delete this coupon?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (isAdmin)
{
    <a asp-page="/Coupons/Create" class="btn btn-primary mt-2">Create New Coupon</a>
}

<a asp-page="/Index" class="btn btn-secondary mt-2">Back to Home</a>
