@page
@model Cinemagic.Pages.Members.DetailsModel

@{
    ViewData["Title"] = "פרטי משתמש";
}

<h1 class="text-center text-primary mb-4">פרטי מנוי</h1>

<div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
    <div class="text-center mb-4">
        <img src="~/images/MemberIMG/@Model.Member.Image"
             alt="Profile"
             class="rounded-circle border border-secondary"
             width="120"
             height="120" />
    </div>

    <dl class="row">
        <dt class="col-sm-4">תעודת זהות:</dt>
        <dd class="col-sm-8">@Model.Member.IdintityCard</dd>

        <dt class="col-sm-4">שם משפחה:</dt>
        <dd class="col-sm-8">@Model.Member.LastName</dd>

        <dt class="col-sm-4">שם פרטי:</dt>
        <dd class="col-sm-8">@Model.Member.FirstMidName</dd>

        <dt class="col-sm-4">מגדר:</dt>
        <dd class="col-sm-8">@Model.Member.Gender</dd>

        <dt class="col-sm-4">אימייל:</dt>
        <dd class="col-sm-8">@Model.Member.Email</dd>

        <dt class="col-sm-4">טלפון:</dt>
        <dd class="col-sm-8">@Model.Member.Phone</dd>

        <dt class="col-sm-4">תאריך לידה:</dt>
        <dd class="col-sm-8">@Model.Member.BirthDate.ToShortDateString()</dd>
    </dl>

    <div class="text-center mt-4">
        <a class="btn btn-warning me-2" asp-page="./Edit" asp-route-id="@Model.Member.MemberID">ערוך פרטים</a>
        <a class="btn btn-secondary" asp-page="./Index">חזרה לרשימה</a>
    </div>
</div>

