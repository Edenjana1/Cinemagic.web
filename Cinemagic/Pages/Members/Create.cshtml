@page
@model Cinemagic.Pages.Members.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Member</h3>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-3 align-items-center">
                    <div class="col-md-8">
                        <label asp-for="Member.Image" class="form-label fw-bold">Choose Image</label>
                        <select asp-for="Member.Image" class="form-select" asp-items="Model.ImageOptions" id="imageSelect">
                            <option value="">בחר תמונה</option>
                        </select>
                    </div>
                    <div class="col-md-4 text-center">
                        <img id="selectedImage" src="" alt="Selected Member Image" class="img-thumbnail rounded shadow" style="max-width: 100px; display: none;" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Member.IdintityCard" class="form-label fw-bold"></label>
                    <input asp-for="Member.IdintityCard" class="form-control rounded" />
                    <span asp-validation-for="Member.IdintityCard" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Member.LastName" class="form-label fw-bold"></label>
                    <input asp-for="Member.LastName" class="form-control rounded" />
                    <span asp-validation-for="Member.LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Member.FirstMidName" class="form-label fw-bold"></label>
                    <input asp-for="Member.FirstMidName" class="form-control rounded" />
                    <span asp-validation-for="Member.FirstMidName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Member.Gender" class="form-label fw-bold"></label>
                    <select asp-for="Member.Gender" class="form-select" asp-items="Model.GenderOptions">
                        <option value="">בחר מגדר</option>
                    </select>
                    <span asp-validation-for="Member.Gender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Member.Email" class="form-label fw-bold"></label>
                    <input asp-for="Member.Email" class="form-control rounded" />
                    <span asp-validation-for="Member.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Member.Phone" class="form-label fw-bold"></label>
                    <input asp-for="Member.Phone" class="form-control rounded" />
                    <span asp-validation-for="Member.Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Member.BirthDate" class="form-label fw-bold"></label>
                    <input asp-for="Member.BirthDate" class="form-control rounded" />
                    <span asp-validation-for="Member.BirthDate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <input type="submit" value="Create" class="btn btn-success px-4 py-2 rounded-pill" />
                    <a asp-page="Index" class="btn btn-secondary rounded-pill">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateSelectedImage() {
            var selectedValue = document.getElementById("imageSelect").value;
            var img = document.getElementById("selectedImage");

            if (selectedValue) {
                img.src = "/Images/MemberIMG/" + selectedValue;
                img.style.display = "block";
            } else {
                img.style.display = "none";
            }
        }

        document.getElementById("imageSelect").addEventListener("change", updateSelectedImage);

        window.onload = function () {
            updateSelectedImage();
        }
    </script>
}
