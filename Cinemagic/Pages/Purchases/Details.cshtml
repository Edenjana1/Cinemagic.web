@page
@model Cinemagic.Pages.Purchases.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Purchase.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purchase.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Purchase.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Purchase.PurchaseDate)
        </dd>

        <dt class="col-sm-2">
            Movie
        </dt>
        <dd class="col-sm-10">
            @(Model.Purchase.Movies?.MovieName ?? "NO MOVIE")
        </dd>

        <dt class="col-sm-2">
            Serie
        </dt>
        <dd class="col-sm-10">
            @(Model.Purchase.Series?.SerieName ?? "NO SERIE")
        </dd>

        <dt class="col-sm-2">
            Member ID
        </dt>
        <dd class="col-sm-10">
            @Model.Purchase.Members?.IdintityCard
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Purchase.Total)
        </dt>
        <dd class="col-sm-10">
            @Model.Purchase.Total.ToString("C")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Purchase.PurchaseID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
