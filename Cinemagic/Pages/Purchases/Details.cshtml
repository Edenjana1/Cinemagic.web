@page
@model Cinemagic.Pages.Purchases.DetailsModel

@{
    ViewData["Title"] = "Purchase Details";
}

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Purchase Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Model.Purchase.Email</dd>

                <dt class="col-sm-3 fw-bold">Purchase Date</dt>
                <dd class="col-sm-9">@Model.Purchase.PurchaseDate</dd>

                <dt class="col-sm-3 fw-bold">Movie</dt>
                <dd class="col-sm-9">@((Model.Purchase.Movies?.MovieName) ?? "NO MOVIE")</dd>

                <dt class="col-sm-3 fw-bold">Serie</dt>
                <dd class="col-sm-9">@((Model.Purchase.Series?.SerieName) ?? "NO SERIE")</dd>

                <dt class="col-sm-3 fw-bold">Member ID</dt>
                <dd class="col-sm-9">@Model.Purchase.Members?.IdintityCard</dd>

                <dt class="col-sm-3 fw-bold">Total</dt>
                <dd class="col-sm-9">@Model.Purchase.Total.ToString("C")</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-page="./Edit" asp-route-id="@Model.Purchase.PurchaseID" class="btn btn-warning me-2">Edit</a>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
