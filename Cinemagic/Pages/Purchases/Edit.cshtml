@page
@model Cinemagic.Pages.Purchases.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Edit Purchase</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Purchase.PurchaseID" />

                <div class="form-group">
                    <label asp-for="Purchase.MovieID" class="control-label fw-bold"></label>
                    <select asp-for="Purchase.MovieID" class="form-control" asp-items="ViewBag.MovieID">
                        <option value="">Select Movie</option>
                    </select>
                    <span asp-validation-for="Purchase.MovieID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Purchase.SerieID" class="control-label fw-bold"></label>
                    <select asp-for="Purchase.SerieID" class="form-control" asp-items="ViewBag.SerieID">
                        <option value="">Select Serie</option>
                    </select>
                    <span asp-validation-for="Purchase.SerieID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Purchase.MemberID" class="control-label fw-bold"></label>
                    <select asp-for="Purchase.MemberID" class="form-control" asp-items="ViewBag.MemberID">
                        <option value="">Select Member</option>
                    </select>
                    <span asp-validation-for="Purchase.MemberID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Purchase.Email" class="control-label fw-bold"></label>
                    <input asp-for="Purchase.Email" class="form-control" />
                    <span asp-validation-for="Purchase.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Purchase.PurchaseDate" class="control-label fw-bold"></label>
                    <input asp-for="Purchase.PurchaseDate" class="form-control" />
                    <span asp-validation-for="Purchase.PurchaseDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Purchase.Total" class="control-label fw-bold"></label>
                    <input asp-for="Purchase.Total" class="form-control" readonly />
                    <span asp-validation-for="Purchase.Total" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer text-end">
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
