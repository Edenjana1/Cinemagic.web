@page
@model Cinemagic.Pages.Purchases.CreateMoviePModel

@{
    ViewData["Title"] = "Create";
}

<h1>רכישת סרט</h1>

<h4>פרטי רכישה</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- מציג שם הסרט -->
            <div class="form-group">
                <label>שם הסרט:</label>
                <input type="text" class="form-control" value="@Model.MovieName" readonly />
            </div>

            <!-- שומר את MovieID בצורה חבויה -->
            <input type="hidden" asp-for="Purchase.MovieID" />

            <!-- מציג תעודת זהות -->
            <div class="form-group">
                <label>תעודת זהות:</label>
                <input type="text" class="form-control" value="@Model.IdentityCard" readonly />
            </div>

            <input type="hidden" asp-for="Purchase.MemberID" />

            <div class="form-group">
                <label asp-for="Purchase.Email" class="control-label">כתובת אימייל</label>
                <select asp-for="Purchase.Email" class="form-control" asp-items="ViewBag.Email">
                    <option value="">בחר אימייל</option>
                </select>
                <span asp-validation-for="Purchase.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Purchase.PurchaseDate">תאריך רכישה</label>
                <input asp-for="Purchase.PurchaseDate" class="form-control" readonly />
                <span asp-validation-for="Purchase.PurchaseDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Purchase.Total">סכום לתשלום</label>
                <input asp-for="Purchase.Total" class="form-control" readonly />
                <span asp-validation-for="Purchase.Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="רכוש" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">חזרה לרשימה</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
