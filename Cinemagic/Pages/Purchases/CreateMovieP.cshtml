@page
@model Cinemagic.Pages.Purchases.CreateMoviePModel

@{
    ViewData["Title"] = "Purchase Movies";
}

<h1>Purchase Movies</h1>

<h4>Purchase Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Display Series Name -->
            <div class="form-group">
                <label>Movie Name:</label>
                <input type="text" class="form-control" value="@Model.MovieName" readonly />
            </div>

            <input type="hidden" asp-for="Purchase.MovieID" />

            <!-- Identity Card -->
            <div class="form-group">
                <label>Identity Card:</label>
                <input type="text" class="form-control" value="@Model.IdentityCard" readonly />
            </div>

            <!-- Member ID -->
            <input type="hidden" asp-for="Purchase.MemberID" />

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Purchase.Email" class="control-label">Email Address</label>
                <input asp-for="Purchase.Email" class="form-control" />
                <span asp-validation-for="Purchase.Email" class="text-danger"></span>
            </div>

            <!-- Purchase Date -->
            <div class="form-group">
                <label asp-for="Purchase.PurchaseDate">Purchase Date</label>
                <input asp-for="Purchase.PurchaseDate" class="form-control" readonly />
                <span asp-validation-for="Purchase.PurchaseDate" class="text-danger"></span>
            </div>

            <!-- Coupon Code -->
            <div class="form-group">
                <label asp-for="CouponCode">קוד קופון</label>
                <input type="text" id="couponInput" name="CouponCode" placeholder="Enter Coupon" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>

            <!-- Total  -->

            <div class="form-group">
                <label asp-for="Purchase.Total">Total Price (NIS) </label> 
                <input asp-for="Purchase.Total " class="form-control" readonly id="totalInput" />
                <span asp-validation-for="Purchase.Total" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Purchase" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Go to Purchase List</a>
    <a asp-page="/Movies/Index">Go to Movies List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const coupons = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Cinemagic.Pages.Cupons.CouponStore.Coupons));
        const originalPrice = @Model.Purchase.Total;

        const couponInput = document.getElementById("couponInput");
        const totalInput = document.getElementById("totalInput");

        couponInput.addEventListener("input", function () {
            const inputCode = couponInput.value.trim().toUpperCase();
            let finalPrice = originalPrice;

            if (inputCode.startsWith("MOVIE")) {
                const coupon = coupons.find(c => c.Code.trim().toUpperCase() === inputCode);
                if (coupon) {
                    const expiry = new Date(coupon.ExpiryDate);
                    const today = new Date();

                    if (expiry >= today) {
                        const discount = coupon.Discount / 100;
                        finalPrice = originalPrice * (1 - discount);
                    }
                }
            }

            totalInput.value = finalPrice.toFixed(2);
        });
    </script>


}
