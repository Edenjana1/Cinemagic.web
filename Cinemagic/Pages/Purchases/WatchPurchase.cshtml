@page
@model Cinemagic.Pages.Purchases.WatchPurchaseModel

<h2>Purchased Movies</h2>
<div class="row">
    @if (Model.MoviePurchases.Count == 0)
    {
        <p>No movies purchased with this identity card.</p>
    }
    @foreach (var purchase in Model.MoviePurchases)
    {
        var url = Model.MovieUrls.ContainsKey(purchase.MovieID.Value)
        ? Model.MovieUrls[purchase.MovieID.Value]
        : "#";

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm" style="padding: 16px; background-color: white;">
                <div style="display: inline-block; border: 1px solid #ccc; padding: 8px; box-shadow: 2px 2px 5px rgba(0,0,0,0.25);">
                    <img src="~/Images/MovieIMG/@purchase.Movies.Image"
                         alt="@purchase.Movies.MovieName"
                         style="width: 100%; height: 280px; object-fit: contain; display: block;" />
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-center">@purchase.Movies.MovieName</h5>
                    <a href="@url" target="_blank" class="btn btn-primary mt-auto w-100">▶️ Watch Now</a>
                </div>
            </div>
        </div>
    }
</div>

