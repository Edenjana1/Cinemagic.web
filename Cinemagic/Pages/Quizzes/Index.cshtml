@page
@model Cinemagic.Pages.Quizzes.IndexModel
@{
    ViewData["Title"] = "Quizzes";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center" style="font-weight: 600;">🎬 Movie & Series Quizzes</h1>

    <!-- כפתור יצירת חידון -->
    <div class="text-center mb-4">
        <a class="btn btn-success px-4 py-2" style="font-size: 1.1rem; border-radius: 10px;" asp-page="/Quizzes/Create">➕ Create a Quiz</a>
    </div>

    <!-- הצגת חידונים קיימים -->
    @if (Model.Quizzes != null && Model.Quizzes.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var quiz in Model.Quizzes)
            {
                <div class="col">
                    <div class="card shadow-sm h-100" style="border-radius: 15px; transition: transform 0.2s ease;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title">@quiz.Title</h5>
                            </div>
                            <div class="mt-3">
                                <a asp-page="/Quizzes/PlayQuiz" asp-route-id="@quiz.Id" class="btn btn-outline-primary w-100">🎮 Play</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted text-center mt-4">No quizzes available yet. Be the first to create one!</p>
    }
</div>
