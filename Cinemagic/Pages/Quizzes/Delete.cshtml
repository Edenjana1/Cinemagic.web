@page
@model Cinemagic.Pages.Quizzes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.Title)
        </dd>
    </dl>

    @if (Model.Quiz.Questions != null && Model.Quiz.Questions.Any())
    {
        <h5>Questions:</h5>
        <ol>
            @foreach (var question in Model.Quiz.Questions)
            {
                <li class="mb-3">
                    <strong>@question.QuestionText</strong>
                    <ul>
                        @for (int i = 0; i < question.Options.Count; i++)
                        {
                            <li>@question.Options[i] @(question.CorrectOptionIndex == i ? "(Correct)" : "")</li>
                        }
                    </ul>
                </li>
            }
        </ol>
    }

    <form method="post">
        <input type="hidden" asp-for="Quiz.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
