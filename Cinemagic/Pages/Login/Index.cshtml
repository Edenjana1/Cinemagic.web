@page
@model Cinemagic.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label for="IdintityCard">ID Number</label>
        <input type="text" id="IdintityCard" name="IdintityCard" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Login</button>
</form>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @Model.ErrorMessage
    </div>
}
