@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var userType = HttpContextAccessor.HttpContext.Session.GetString("UserType");
    var isAdmin = userType == "Admin";
    var isMember = userType == "Member";

    // קביעת מחלקת ה-navbar
    var navClass = "navbar navbar-expand-lg navbar-light navbar-custom";
    if (isAdmin || isMember)
    {
        navClass += " logged-in";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinemagic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinemagic.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>

<body>

    <header>
        <!-- סרגל ניווט -->
        <nav class="@navClass">
            <a class="navbar-brand fw-bold" href="/">🎞️ Cinemagic</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">🏠 Home</a>
                    </li>

                    @if (isAdmin || isMember)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Movies/Index">🎬 Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Series/Index">📺 Series</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Purchases/Index">💳 Purchases</a>
                        </li>
                    }

                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Members/Index">👥 Members</a>
                        </li>
                    }

                    @if (isMember)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/MembersUser/DetailsUser">👤 My Profile</a>
                        </li>
                    }
                </ul>

                <!-- כפתורי התחברות / התנתקות -->
                <div class="navbar-buttons d-flex">
                    @if (isAdmin)
                    {
                        <form method="post" asp-page="/Index" asp-route-handler="LogoutAdmin">
                            <button type="submit" class="btn btn-danger">🚪 Logout as Admin</button>
                        </form>
                    }
                    else if (isMember)
                    {
                        <form method="post" asp-page="/Index" asp-route-handler="LogoutMember">
                            <button type="submit" class="btn btn-warning">🚪 Logout</button>
                        </form>
                    }
                    else
                    {
                        <a href="/MembersUser/CreateUser" class="btn btn-primary">📝 Sign Up</a>
                        <a href="/Login" class="btn btn-success text-white">🔐 Member Login</a>
                        <form method="post" asp-page="/Index">
                            <button type="submit" class="btn btn-secondary">🛠️ Admin Login</button>
                        </form>
                    }
                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Cinemagic - <a asp-area="" asp-page="/Privacy" style=" color: black;  ">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
