@page
@model Cinemagic.Pages.Series.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>סדרות</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        הוסף סדרה
    </a>
</p>
<form>
    <div>
        <p>
            חיפוש סדרה:
            <input type="text" name="SearchString" />
            <input type="submit" value="חיפוש" class="btn btn-primary" />
            <a asp-page="./Index">חזרה לרשימה המלאה</a>
        </p>

    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].SerieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].SeasonNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].SerieGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].SerieDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].AgeRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].SeriePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Serie) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeasonNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerieGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerieDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriePrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SerieID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SerieID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SerieID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
