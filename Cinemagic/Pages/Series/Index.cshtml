@page
@model Cinemagic.Pages.Series.IndexModel

@{
    ViewData["Title"] = "Series";
}

<h1>Series</h1>

@{
    var userType = HttpContext.Session.GetString("UserType");
}

@if (userType == "Admin")
{
    <a href="/Series/Create" class="btn btn-primary">Add Serie</a>
}

<!-- Genre Filter -->
<form method="get" class="d-flex align-items-center mb-4" style="gap: 10px; margin-top: 20px;">
    <label for="Genre" class="form-label mb-0">Genre:</label>

    <select asp-for="Genre" asp-items="Model.Genres" class="form-select" style="max-width: 150px;">
        <option value="">All</option>
    </select>

    <input type="submit" value="Filter" class="btn btn-primary" />
</form>
@if (Model.MostPurchasedSeries.Any())
{
    <h2 class="mt-5">הסדרות הכי נרכשות</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        @foreach (var serie in Model.MostPurchasedSeries)
        {
            <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
                @foreach (var Serie in Model.MostPurchasedSeries)
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@serie.SerieName</h5>
                                <p class="card-text">Price: @serie.SeriePrice ₪</p>
                                <p class="card-text"><small class="text-muted">Genre: @serie.SerieGenre</small></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}




<!-- Search Box -->
<form method="get">
    <div>
        <p>
            Search Series:
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
        @foreach (var item in Model.Serie)
        {
            <div class="movie-card" style="width: 180px; text-align: center;">
                <a asp-page="./Details" asp-route-id="@item.SerieID" style="text-decoration: none; color: inherit;">
                    <img src="~/Images/SerieIMG/@item.Image" alt="@item.SerieName" style="width: 150px; height: 150px; border-radius: 10px;" />

                    <h5>@item.SerieName</h5>
                </a>
            </div>
        }
    </div>
</table>
