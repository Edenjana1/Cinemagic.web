@page
@model Cinemagic.Pages.Series.IndexModel

@{
    ViewData["Title"] = "Series";
    var userType = HttpContext.Session.GetString("UserType");
}

<!-- Genre Navigation Bar -->
<div class="genre-bar-container">
    <div class="genre-bar d-flex flex-wrap gap-2 justify-content-start">
        <a asp-page="./Index" class="btn @(Model.Genre == null ? "btn-dark" : "btn-outline-secondary")">All</a>
        @foreach (var genre in Model.Genres)
        {
            <a asp-page="./Index"
               asp-route-Genre="@genre.Value"
               class="btn @(Model.Genre?.ToString() == genre.Value ? "btn-dark" : "btn-outline-secondary")">
                @genre.Text
            </a>
        }
    </div>
</div>

<h1>Series</h1>

@if (userType == "Admin")
{
    <a href="/Series/Create" class="btn btn-primary">Add Series</a>
}



<!-- Search Box -->
<form method="get" style="margin: 20px 0;">
    <div style="display: flex; flex-wrap: wrap; align-items: center; gap: 10px;">
        <label for="searchBox" style="font-weight: 500; color: #444;">Search Series:</label>
        <input type="text" id="searchBox" name="SearchString"
               placeholder="Enter series name..."
               style="padding: 8px 12px; border: 1px solid #ccc; border-radius: 8px; width: 220px;" />

        <input type="submit" value="Search"
               style="background-color: #444; color: white; border: none; padding: 8px 16px; border-radius: 8px;
                      transition: background-color 0.3s ease;"
               onmouseover="this.style.backgroundColor='#333';"
               onmouseout="this.style.backgroundColor='#444';" />

        <a asp-page="./Index"
           style="text-decoration: none; padding: 8px 12px; border-radius: 8px; border: 1px solid #aaa; color: #555;
                  transition: background-color 0.3s ease;"
           onmouseover="this.style.backgroundColor='#f0f0f0';"
           onmouseout="this.style.backgroundColor='transparent';">
            Back to Full List
        </a>
    </div>
</form>

<h3>Series</h3>
@if (Model.Serie.Any())
{
    <div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
        @foreach (var item in Model.Serie)
        {
            <div class="movie-card" style="width: 180px; text-align: center;">
                <a asp-page="./Details" asp-route-id="@item.SerieID" style="text-decoration: none; color: inherit;">
                    <img src="~/Images/SerieIMG/@item.Image" alt="@item.SerieName" style="width: 150px; height: 150px; border-radius: 10px;" />
                    <h5>@item.SerieName</h5>
                </a>
            </div>
        }
    </div>
}
else if (Model.Genre != null)
{
    <p style="font-style: italic; color: #888;">No series available in the selected genre.</p>
}
else
{
    <p style="font-style: italic; color: #888;">No series available.</p>
}

<h3>Most Purchased Series</h3>
@if (Model.MostPurchasedSeries.Any())
{
    <div class="d-flex flex-row flex-nowrap overflow-auto" style="gap: 12px; padding: 10px 0; justify-content: flex-start;">
        @foreach (var serie in Model.MostPurchasedSeries)
        {
            <div class="serie-item" style="flex: 0 0 180px;">
                <a asp-page="/Series/Details" asp-route-id="@serie.SerieID" class="text-decoration-none text-dark">
                    <div class="card h-100" style="width: 100%; height: 280px; border: 3px solid; box-shadow: 2px 2px 8px rgba(0,0,0,0.25); padding: 8px; transition: transform 0.3s ease, box-shadow 0.3s ease; background-color: white;">
                        @if (!string.IsNullOrEmpty(serie.Image))
                        {
                            <img src="~/Images/SerieIMG/@serie.Image" alt="@serie.SerieName" style="width: 100%; height: 180px; object-fit: cover; margin-bottom: 8px;" />
                        }
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@serie.SerieName</h5>
                            <p class="card-text mb-1" style="font-size: 0.9rem;">Price: @serie.SeriePrice ₪</p>
                            <p class="card-text" style="font-size: 0.8rem; color: #666;">Genre: @serie.SerieGenre</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <p style="font-style: italic; color: #888;">No popular series available.</p>
}

<h3>New Series</h3>
@if (Model.RecentSeries.Any())
{
    <div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
        @foreach (var serie in Model.RecentSeries)
        {
            <div class="movie-card" style="width: 180px; text-align: center;">
                <a asp-page="/Series/Details" asp-route-id="@serie.SerieID" style="text-decoration: none; color: inherit;">
                    <img src="~/Images/SerieIMG/@serie.Image" alt="@serie.SerieName"
                         style="width: 150px; height: 150px; border-radius: 10px; object-fit: cover;" />
                    <h5 style="margin-top: 10px;">@serie.SerieName</h5>
                    <p style="font-size: 0.9rem; color: #555;">Released: @serie.ReleaseDate.ToShortDateString()</p>
                </a>
            </div>
        }
    </div>
}
else if (Model.Genre != null)
{
    <p style="font-style: italic; color: #888;">No new series in the searched genre.</p>
}
else
{
    <p style="font-style: italic; color: #888;">No new series in the last year.</p>
}

<h3 style="margin-top: 30px;">Series for Kids</h3>
@if (Model.KidsSeries.Any())
{
    <div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
        @foreach (var serie in Model.KidsSeries)
        {
            <div class="movie-card" style="width: 180px; text-align: center;">
                <a asp-page="/Series/Details" asp-route-id="@serie.SerieID" style="text-decoration: none; color: inherit;">
                    <img src="~/Images/SerieIMG/@serie.Image" alt="@serie.SerieName"
                         style="width: 150px; height: 150px; border-radius: 10px; object-fit: cover;" />
                    <h5 style="margin-top: 10px;">@serie.SerieName</h5>
                    <p style="font-size: 0.9rem; color: #555;">Released: @serie.ReleaseDate.ToShortDateString()</p>
                </a>
            </div>
        }
    </div>
}
else
{
    <p style="font-style: italic; color: #888;">No kids series found for the selected genre.</p>
}
