@page
@model Cinemagic.Pages.Series.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Serie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Serie.SerieID" />
            <div class="form-group" style="display: grid; grid-template-columns: 1fr auto; align-items: flex-start; column-gap: 30px;">
                <div>
                    <label asp-for="Serie.Image" class="control-label"></label>
                    <select asp-for="Serie.Image" class="form-control" asp-items="Model.ImageOptions" id="imageSelect">
                        <option value="">בחר תמונה</option>
                    </select>
                </div>
                <div>
                    <img id="selectedImage" src="" alt="Selected Movie Image" style="max-width: 200px; display: none;" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Serie.SerieName" class="control-label">Serie Name</label>
                <select asp-for="Serie.SerieName" class="form-control">
                    <option value="">בחר סדרה</option>
                    <option value="Cobra Kai">Cobra Kai</option>
                    <option value="Game of Thrones">Game of Thrones</option>
                    <option value="Money Heist">Money Heist</option>
                    <option value="Stranger Things">Stranger Things</option>
                    <option value="Friends">Friends</option>
                </select>
                <span asp-validation-for="Serie.SerieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="SeasonNum" class="control-label">Season Number</label>
                <select id="seasonDropdown" name="SeasonNum" class="form-control">
                    @for (int i = 1; i <= 30; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Serie.SerieGenre" class="control-label">ז'אנר</label>
                <select asp-for="Serie.SerieGenre" class="form-control" asp-items="Model.Genres">
                    <option value="">בחר ז'אנר</option>
                </select>
                <span asp-validation-for="Serie.SerieGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie.ReleaseDate" class="control-label"></label>
                <input asp-for="Serie.ReleaseDate" class="form-control" />
                <span asp-validation-for="Serie.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie.SerieDescription" class="control-label"></label>
                <input asp-for="Serie.SerieDescription" class="form-control" />
                <span asp-validation-for="Serie.SerieDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie.AgeRate" class="control-label"></label>
                <input asp-for="Serie.AgeRate" class="form-control" />
                <span asp-validation-for="Serie.AgeRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie.SeriePrice" class="control-label"></label>
                <input asp-for="Serie.SeriePrice" class="form-control" />
                <span asp-validation-for="Serie.SeriePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script>
        function updateSelectedImage() {
            var selectedValue = document.getElementById("imageSelect").value;
            var img = document.getElementById("selectedImage");

            if (selectedValue) {
                img.src = "/Images/SerieIMG/" + selectedValue;
                img.style.display = "block";
            } else {
                img.style.display = "none";
            }
        }

        document.getElementById("imageSelect").addEventListener("change", updateSelectedImage);

        // כדי להציג את התמונה גם לאחר שליחה - אם יש בחירה קיימת
        window.onload = function() {
            updateSelectedImage();
        }
        $(document).ready(function () {
            $('#seasonDropdown').select2({
                dropdownParent: $('#seasonDropdown').parent(), // מבטיח שייפתח מתחת
                dropdownAutoWidth: true,
                width: '100%',
                minimumResultsForSearch: Infinity // מסתיר חיפוש אם לא צריך
            });
        });
    </script>
}


