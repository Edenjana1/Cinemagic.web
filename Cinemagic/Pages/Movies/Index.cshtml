@page
@model Cinemagic.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

@{
    var userType = HttpContext.Session.GetString("UserType");
}

@if (userType == "Admin")
{
    <a href="/Movies/Create" class="btn btn-primary">Add Movie</a>
}

<!-- Genre Filter -->
<form method="get" class="d-flex align-items-center mb-4" style="gap: 10px; margin-top: 20px;">
    <label for="Genre" class="form-label mb-0">Genre:</label>

    <select asp-for="Genre" asp-items="Model.Genres" class="form-select" style="max-width: 150px;">
        <option value="">All</option>
    </select>

    <input type="submit" value="Filter" class="btn btn-primary" />
</form>
<!-- Most Purchased Movies -->
<h3>Most Purchased Movies</h3>

@if (Model.MostPurchasedMovies.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
        @foreach (var movie in Model.MostPurchasedMovies)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@movie.MovieName</h5>
                        <p class="card-text">Price: @movie.MoviePrice ₪</p>
                        <p class="card-text"><small class="text-muted">Genre: @movie.MovieGenre</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No purchased movies yet.</p>
}

<!-- Search Box -->
<form method="get">
    <div>
        <p>
            Search Movies:
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Back to Full List</a>
        </p>
    </div>
</form>

<!-- Movie Grid -->
<div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
    @foreach (var item in Model.Movie)
    {
        <div class="movie-card" style="width: 180px; text-align: center;">
            <a asp-page="./Details" asp-route-id="@item.MovieID" style="text-decoration: none; color: inherit;">
                <img src="~/Images/MovieIMG/@item.Image" alt="@item.MovieName" style="width: 150px; height: 150px; border-radius: 10px;" />
                <h5>@item.MovieName</h5>
            </a>
        </div>
    }
</div>
