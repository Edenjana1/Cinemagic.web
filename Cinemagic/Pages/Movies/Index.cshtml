@page
@model Cinemagic.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

@{
    var userType = HttpContext.Session.GetString("UserType");
}

@if (userType == "Admin")
{
    <a href="/Movies/Create" class="btn btn-primary">Add Movie</a>
}

<!-- Genre Filter -->
<form method="get" class="d-flex align-items-center mb-4" style="gap: 10px; margin-top: 20px;">
    <label for="Genre" class="form-label mb-0">Genre:</label>

    <select asp-for="Genre" asp-items="Model.Genres" class="form-select" style="max-width: 150px;">
        <option value="">All</option>
    </select>

    <input type="submit" value="Filter" class="btn btn-primary" />
</form>


<!-- Search Box -->
<form method="get">
    <div>
        <p>
            Search Movies:
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Back to Full List</a>
        </p>
    </div>
</form>



<!-- Most Purchased Movies -->
<h3>Most Purchased Movies</h3>

@if (Model.MostPurchasedMovies.Any())
{
    <div class="d-flex flex-row flex-nowrap overflow-auto" style="gap: 12px; padding: 10px 0; justify-content: flex-start;">
        @foreach (var movie in Model.MostPurchasedMovies)
        {
            <div class="movie-item" style="flex: 0 0 180px;">
                <a asp-page="/Movies/Details" asp-route-id="@movie.MovieID" class="text-decoration-none text-dark">
                    <div class="card h-100" style="width: 100%; height: 280px; border: 3px solid ; box-shadow: 2px 2px 8px rgba(0,0,0,0.25); padding: 8px; transition: transform 0.3s ease, box-shadow 0.3s ease; background-color: white;">
                        @if (!string.IsNullOrEmpty(movie.Image))
                        {
                            <img src="~/Images/MovieIMG/@movie.Image" alt="@movie.MovieName" style="width: 100%; height: 180px; object-fit: cover; margin-bottom: 8px;" />
                        }
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@movie.MovieName</h5>
                            <p class="card-text mb-1" style="font-size: 0.9rem;">Price: @movie.MoviePrice ₪</p>
                            <p class="card-text" style="font-size: 0.8rem; color: #666;">Genre: @movie.MovieGenre</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

}
else
{
    <p>No purchased movies yet.</p>
}

<h3> Movies</h3>
<!-- Movie Grid -->
<div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
    @foreach (var item in Model.Movie)
    {
        <div class="movie-card" style="width: 180px; text-align: center;">
            <a asp-page="./Details" asp-route-id="@item.MovieID" style="text-decoration: none; color: inherit;">
                <img src="~/Images/MovieIMG/@item.Image" alt="@item.MovieName" style="width: 150px; height: 150px; border-radius: 10px;" />
                <h5>@item.MovieName</h5>
            </a>
        </div>
    }
</div>

<h3>New Movies</h3>

@if (Model.RecentMovies.Any())
{
    <div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
        @foreach (var movie in Model.Movie)
        {
            <div class="movie-card" style="width: 180px; text-align: center;">
                <a asp-page="/Movies/Details" asp-route-id="@movie.MovieID" style="text-decoration: none; color: inherit;">
                    <img src="~/Images/MovieIMG/@movie.Image" alt="@movie.MovieName"
                         style="width: 150px; height: 150px; border-radius: 10px; object-fit: cover;" />
                    <h5 style="margin-top: 10px;">@movie.MovieName</h5>
                    <p style="font-size: 0.9rem; color: #555;">Released: @movie.ReleaseDate.ToShortDateString()</p>
                </a>
            </div>
        }
    </div>

}
else
{
    <p>No new movies in the last year.</p>
}


<h3 style="margin-top: 30px;">Movies for Kids</h3>
<div class="movie-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
    @foreach (var movie in Model.KidsMovies) // ודאי שיש לך רשימה כזו ב-Model
    {
        <div class="movie-card" style="width: 180px; text-align: center;">
            <a asp-page="/Movies/Details" asp-route-id="@movie.MovieID" style="text-decoration: none; color: inherit;">
                <img src="~/Images/MovieIMG/@movie.Image" alt="@movie.MovieName"
                     style="width: 150px; height: 150px; border-radius: 10px; object-fit: cover;" />
                <h5 style="margin-top: 10px;">@movie.MovieName</h5>
                <p style="font-size: 0.9rem; color: #555;">Released: @movie.ReleaseDate.ToShortDateString()</p>
            </a>
        </div>
    }
</div>
