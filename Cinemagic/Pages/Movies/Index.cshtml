@page
@model Cinemagic.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Movies";
    var userType = HttpContext.Session.GetString("UserType");
}

<!-- Genre Navigation Bar -->
<div class="genre-bar-container">
    <div class="genre-bar d-flex flex-wrap gap-2 justify-content-start">
        <a asp-page="./Index" class="btn @(Model.Genre == null ? "btn-dark" : "btn-outline-secondary")">All</a>
        @foreach (var genre in Model.Genres)
        {
            <a asp-page="./Index"
               asp-route-Genre="@genre.Value"
               class="btn @(Model.Genre?.ToString() == genre.Value ? "btn-dark" : "btn-outline-secondary")">
                @genre.Text
            </a>
        }
    </div>
</div>

<h1>Movies</h1>

@if (userType == "Admin")
{
    <a href="/Movies/Create" class="btn btn-primary">Add Movies</a>
}

<!-- Search Box -->
<form method="get" style="margin: 20px 0;">
    <div style="display: flex; flex-wrap: wrap; align-items: center; gap: 10px;">
        <label for="searchBoxMovies" style="font-weight: 500; color: #444;">Search Movies:</label>
        <input type="text" id="searchBoxMovies" name="SearchString"
               placeholder="Enter Movies name..."
               style="padding: 8px 12px; border: 1px solid #ccc; border-radius: 8px; width: 220px;" />

        <input type="submit" value="Search"
               style="background-color: #444; color: white; border: none; padding: 8px 16px; border-radius: 8px;
                      transition: background-color 0.3s ease;"
               onmouseover="this.style.backgroundColor='#333';"
               onmouseout="this.style.backgroundColor='#444';" />

        <a asp-page="./Index"
           style="text-decoration: none; padding: 8px 12px; border-radius: 8px; border: 1px solid #aaa; color: #555;
                  transition: background-color 0.3s ease;"
           onmouseover="this.style.backgroundColor='#f0f0f0';"
           onmouseout="this.style.backgroundColor='transparent';">
            Back to Full List
        </a>
    </div>
</form>

<h3>Movies</h3>
@if (Model.Movie.Any())
{
    <div style="position: relative; width: 100%; overflow: hidden;">

        <!-- כפתורי החלקה -->
        <button type="button" id="scrollLeftBtn" style="position: absolute; left: 0; top: 40%; z-index: 10; background-color: rgba(0,0,0,0.3); border: none; color: white; font-size: 24px; cursor: pointer; padding: 10px;">&#8592;</button>
        <button type="button" id="scrollRightBtn" style="position: absolute; right: 0; top: 40%; z-index: 10; background-color: rgba(0,0,0,0.3); border: none; color: white; font-size: 24px; cursor: pointer; padding: 10px;">&#8594;</button>

        <div id="MoviesContainer" style="display: flex; overflow-x: auto; scroll-behavior: smooth; gap: 15px; padding: 10px 40px;">

            @foreach (var item in Model.Movie)
            {
                <div class="movie-card" style="flex: 0 0 auto; width: 160px; text-align: center;">
                    <a asp-page="./Details" asp-route-id="@item.MovieID" style="text-decoration: none; color: inherit;">
                        <img src="~/Images/MovieIMG/@item.Image" alt="@item.MovieName" style="width: 100%; border-radius: 8px;" />
                        <h5 style="margin-top: 8px;">@item.MovieName</h5>
                    </a>
                </div>
            }
        </div>
    </div>

    <script>
        const scrollContainer = document.getElementById('MoviesContainer');
        const btnLeft = document.getElementById('scrollLeftBtn');
        const btnRight = document.getElementById('scrollRightBtn');

        btnLeft.addEventListener('click', () => {
            scrollContainer.scrollBy({ left: -300, behavior: 'smooth' });
        });

        btnRight.addEventListener('click', () => {
            scrollContainer.scrollBy({ left: 300, behavior: 'smooth' });
        });
    </script>
}
else
{
    <p style="font-style: italic; color: #aaa;">No Movies available.</p>
}


