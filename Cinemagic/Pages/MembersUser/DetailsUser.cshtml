@page
@model Cinemagic.Pages.Members.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<h1 class="text-center text-primary mb-4">Subscriber Details</h1>

<div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
    <div class="text-center mb-4">
        <img src="~/images/MemberIMG/@Model.Member.Image"
             alt="Profile"
             class="rounded-circle border border-secondary"
             width="120"
             height="120" />
    </div>

    <dl class="row">
        <dt class="col-sm-4">Identity Card:</dt>
        <dd class="col-sm-8">@Model.Member.IdintityCard</dd>

        <dt class="col-sm-4">Last Name:</dt>
        <dd class="col-sm-8">@Model.Member.LastName</dd>

        <dt class="col-sm-4">First Name:</dt>
        <dd class="col-sm-8">@Model.Member.FirstMidName</dd>

        <dt class="col-sm-4">Gender:</dt>
        <dd class="col-sm-8">@Model.Member.Gender</dd>

        <dt class="col-sm-4">Email:</dt>
        <dd class="col-sm-8">@Model.Member.Email</dd>

        <dt class="col-sm-4">Phone:</dt>
        <dd class="col-sm-8">@Model.Member.Phone</dd>

        <dt class="col-sm-4">Birth Date:</dt>
        <dd class="col-sm-8">@Model.Member.BirthDate.ToShortDateString()</dd>
    </dl>

    <div class="text-center mt-4">
        <a class="btn btn-warning me-2" asp-page="/MembersUser/EditUser" asp-route-id="@Model.Member.MemberID">Edit Details</a>
        <a class="btn btn-secondary" asp-page="/Movies/Index">Back to List</a>
    </div>
</div>
