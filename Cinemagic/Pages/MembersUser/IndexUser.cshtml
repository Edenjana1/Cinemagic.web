@model Cinemagic.Pages.MembersUser.IndexUserModel

@{
    ViewData["Title"] = "מנויים";
}

<h1>מנויים</h1>

<!-- טופס חיפוש -->
<form method="get">
    <div class="form-group">
        <label for="SearchString">חפש מנוי:</label>
        <input type="text" id="SearchString" name="SearchString" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">חפש</button>
</form>

<!-- הצגת תוצאות החיפוש -->
@if (Model.Member != null && Model.Member.Any())
{
    <ul class="list-group mt-3">
        @foreach (var member in Model.Member)
        {
            <li class="list-group-item">
                <a asp-page="/MembersUser/DetailsUser" asp-route-id="@member.MemberID">
                    @member.FirstMidName @member.LastName
                </a>
            </li>
        }
    </ul>
}
else
{
    <p class="mt-3">לא נמצאו מנויים התואמים לחיפוש.</p>
}


