@page
@model Cinemagic.Pages.MembersUser.CreateUserModel

@{
    ViewData["Title"] = "Create";
    ViewData["NavClass"] = "login-page";
}

<h1 class="text-center mb-4" style="font-weight: 700; color: #2c3e50;">Create New Member</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm p-4" style="border-radius: 20px; background-color: #fdfdfd;">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group d-flex align-items-center mb-4" style="column-gap: 30px;">
                    <div class="flex-grow-1">
                        <label asp-for="Member.Image" class="form-label fw-semibold">Profile Image</label>
                        <select asp-for="Member.Image" class="form-select" asp-items="Model.ImageOptions" id="imageSelect">
                            <option value="">Select Image</option>
                        </select>
                    </div>
                    <div>
                        <img id="selectedImage" src="" alt="Selected Member Image"
                             style="width: 90px; height: 90px; border-radius: 50%; object-fit: cover; display: none; border: 2px solid #ccc;" />
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.IdintityCard" class="form-label">ID Number</label>
                    <input asp-for="Member.IdintityCard" class="form-control" />
                    <span asp-validation-for="Member.IdintityCard" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.LastName" class="form-label">Last Name</label>
                    <input asp-for="Member.LastName" class="form-control" />
                    <span asp-validation-for="Member.LastName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.FirstMidName" class="form-label">First Name</label>
                    <input asp-for="Member.FirstMidName" class="form-control" />
                    <span asp-validation-for="Member.FirstMidName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.Gender" class="form-label">Gender</label>
                    <select asp-for="Member.Gender" class="form-select" asp-items="Model.GenderOptions">
                        <option value="">Select Gender</option>
                    </select>
                    <span asp-validation-for="Member.Gender" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.Email" class="form-label">Email</label>
                    <input asp-for="Member.Email" class="form-control" />
                    <span asp-validation-for="Member.Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.Phone" class="form-label">Phone</label>
                    <input asp-for="Member.Phone" class="form-control" />
                    <span asp-validation-for="Member.Phone" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Member.BirthDate" class="form-label">Birth Date</label>
                    <input asp-for="Member.BirthDate" class="form-control" />
                    <span asp-validation-for="Member.BirthDate" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Create Member" class="btn btn-primary btn-lg rounded-pill" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateSelectedImage() {
            var selectedValue = document.getElementById("imageSelect").value;
            var img = document.getElementById("selectedImage");

            if (selectedValue) {
                img.src = "/Images/MemberIMG/" + selectedValue;
                img.style.display = "block";
            } else {
                img.style.display = "none";
            }
        }

        document.getElementById("imageSelect").addEventListener("change", updateSelectedImage);

        window.onload = function () {
            updateSelectedImage();
        }
    </script>
}
